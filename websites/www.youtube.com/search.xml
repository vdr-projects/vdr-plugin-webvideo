<?xml version="1.0" encoding="UTF-8"?>
<wvmenu>
  <title>YouTube Search</title>
  <form action="http://www.youtube.com/results?search_query={q}&amp;filters={uploaded}%2C+{duration}&amp;lclk={uploaded}">
    <ul>
      <li>Search terms <input type="text" name="q"/></li>

      <li>Uploaded
      <label><input type="radio" name="uploaded" value=""/>Anytime</label>
      <label><input type="radio" name="uploaded" value="today"/>Today</label>
      <label><input type="radio" name="uploaded" value="week"/>This week</label>
      <label><input type="radio" name="uploaded" value="month"/>This month</label>
      </li>

      <li>Duration
      <label><input type="radio" name="duration" value=""/>All</label>
      <label><input type="radio" name="duration" value="short"/>Short</label>
      <label><input type="radio" name="duration" value="long"/>Long</label>
      </li>

      <li><input type="submit" value="Search"/></li>
    </ul>
  </form>
</wvmenu>
